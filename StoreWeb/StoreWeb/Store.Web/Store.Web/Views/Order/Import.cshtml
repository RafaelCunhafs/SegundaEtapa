@{
    ViewBag.Title = "Import";
}

<h2>Import File</h2>


@using (Html.BeginForm("Import", "Order", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <div class="col-md-10">
                <input class="form-control" type="file" name="file" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Upload" class="btn btn-primary" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 @ViewBag.FileStatusClass">
                @ViewBag.FileStatus
            </div>
        </div>
    </div>
}
